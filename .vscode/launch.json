{
  "version": "0.2.0",
  "configurations": [
    {
      "command": "npm start",
      "name": "Start app",
      "env": {
        "NODE_OPTIONS": "--enable-source-maps"
      },
      "request": "launch",
      "type": "node-terminal",
      "preLaunchTask": "npm: build"
    },
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "preLaunchTask": "npm: build"
    }
  ]
}
